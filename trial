import customtkinter as ctk

# Initialize CustomTkinter
ctk.set_appearance_mode("dark")
ctk.set_default_color_theme("blue")

# Create the main application window
app = ctk.CTk()
app.geometry("400x300")

# Define a function that will execute when a new option is selected
def option_changed(selected_option):
    print(f"Selected option: {selected_option}")

# Create a list of options for the dropdown
options = ["Option 1", "Option 2", "Option 3", "Option 4"]

# Create the CTkOptionMenu (dropdown box)
dropdown = ctk.CTkOptionMenu(app, values=options, command=option_changed,fg_color="purple",bg_color="white",button_color="purple",button_hover_color="darkgray")
dropdown.set("Select an option")  # Set default text
dropdown.pack(pady=20)

app.mainloop()